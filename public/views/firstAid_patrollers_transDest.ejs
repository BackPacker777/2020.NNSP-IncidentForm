<fieldset id="firstAid">
	<legend><strong>First Aid Rendered</strong></legend>
	<div class="grid-x grid-padding-x">
		<div class="small-6 cell float-left">
			<span class="label expand-label warning"><i class="fas fa-exclamation-triangle"></i> On-Hill First Aid</span><br>
			<textarea name="hillFirstAid" id="hillFirstAid" placeholder="On the hill" required></textarea>
		</div>
		<div class="small-6 cell end">
			<span class="label expand-label warning"><i class="fas fa-exclamation-triangle"></i> Patrol Room First Aid</span><br>
			<textarea name="patrolRoomAid" id="patrolRoomAid" placeholder="In the patrol room" required></textarea>
		</div>
	</div>
</fieldset>
<br>
<fieldset id="patrollers">
	<legend><strong>Patrollers</strong></legend>
	<div class="grid-x grid-padding-x">
		<div class="small-4 cell" id="scenePatrollers">
			<input type="hidden" name="scenePatrollersCount" id="scenePatrollersCount">
			<span class="label expand-label">At Scene?</span><br>
		</div>
		<div class="small-4 cell" id="transportPatrollers">
			<input type="hidden" name="transportPatrollersCount" id="transportPatrollersCount">
			<span class="label expand-label">Transporting?</span><br>
		</div>
		<div class="small-4 cell" id="aidRoomPatrollers">
			<input type="hidden" name="aidRoomPatrollersCount" id="aidRoomPatrollersCount">
			<span class="label expand-label">First aid room?</span><br>
		</div>
	</div>
</fieldset>
<br>
<fieldset id="transportDestination">
	<legend><strong>Transport & Destination</strong></legend>
	<div class="grid-x grid-padding-x">
		<div class="small-4 cell">
            <span class="label expand-label warning"><i class="fas fa-exclamation-triangle"></i> How arrived patrol room?</span><br>
			<input type="radio" name="arrival" id="arrivalPatrol" value="SkiPatrol" required><label for="arrivalPatrol">Patrol/Toboggan</label>
			<input type="radio" name="arrival" id="arrivalWalk" value="WalkIn" required><label for="arrivalWalk">Walk-in</label>
			<input type="radio" name="arrival" id="arrivalOther" value="Other" required><label for="arrivalOther">Other:</label>
		</div>
		<div class="small-8 cell">
			<span class="label expand-label">Other</span><br>
			<input name="arriveOther" id="arriveOther" type="text" placeholder="Other">
		</div>
	</div>
	<div class="grid-x grid-padding-x">
		<div class="small-4 cell ">
            <span class="label expand-label warning"><i class="fas fa-exclamation-triangle"></i> How left patrol room?</span><br>
			<input type="radio" name="leave" id="leaveAmb" value="Ambulance" required><label for="leaveAmb">Ambulance</label>
			<input type="radio" name="leave" id="leaveCar" value="Car" required><label for="leaveCar">Car/Bus</label>
			<input type="radio" name="leave" id="leaveWalk" value="Walk" required><label for="leaveWalk">Walking Out</label>
		</div>
		<div class="small-4 cell ">
            <span class="label expand-label warning"><i class="fas fa-exclamation-triangle"></i> Destination?</span><br>
			<input type="radio" name="dest" id="destHome" value="Home" required><label for="destHome">Home</label>
			<input type="radio" name="dest" id="destLodge" value="Lodge" required><label for="destLodge">Lodge</label>
			<input type="radio" name="dest" id="destReturn" value="ReturnSkiing" required><label for="destReturn">Return Skiing</label>
			<input type="radio" name="dest" id="destOther" value="Other" required><label for="destOther">Other:</label>
		</div>
		<div class="small-4 cell">
			<span class="label expand-label">Destination Other:</span><br>
			<input name="otherDest" id="otherDest" type="text" placeholder="Destination Other">
		</div>
	</div>
</fieldset>